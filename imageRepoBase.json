{
	"description": "Update image tags in files matching <code>{{arg0}}</code>, even if prefixed with the IMAGE_REPO_BASE variable",
	"customManagers": [
		{
			"customType": "regex",
			"fileMatch": [
				"{{arg0}}"
			],
			"matchStrings": [
				"['\"]?\\$\\{?IMAGE_REPO_BASE\\}?(?<registryUrl>[^/]+)/(?<depName>.*):(?<currentValue>.*)['\"]?"
			],
			"datasourceTemplate": "docker",
			"registryUrlTemplate": "https://{{{registryUrl}}}"
		},
		{
			"customType": "regex",
			"fileMatch": [
				"{{arg0}}"
			],
			"matchStrings": [
				"['\"]?\\$\\{?IMAGE_REPO_BASE\\}?index\\.docker\\.io/(?<depName>.*):(?<currentValue>.*)['\"]?"
			],
			"datasourceTemplate": "docker"
		}
	]
}